<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Documents.DocumentsActivity">


    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F1333A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/gloveboxBackImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/back_icon"
            android:tint="@color/white"/>


        <!-- android:fontFamily="@font/lato" -->
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"

            android:layout_gravity="center_horizontal"
            android:text="Documents"
            android:textColor="#fff"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@+id/toolbar" />

    </androidx.appcompat.widget.Toolbar>

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shadow_background"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/glovebox_new_icon"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:text="Proof of legitimacy will help improve your shop's popularity among customers"
            android:textColor="@color/textColorBlack"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans"
            />
    </LinearLayout>

    <!-- DTI -->
    <LinearLayout
        android:id="@+id/dti"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shadow_background"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <!-- ICON -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/insurance_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp">

            <!-- Document Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DTI"
                android:textColor="@color/textColorBlack"
                android:textSize="19sp"
                android:fontFamily="@font/open_sans_bold"/>

            <!-- Has Added -->
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/dtiHasAdded"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/triadPrimaryGreen"
                    android:padding="7dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        app:srcCompat="@drawable/check_mark_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:text="Added"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- No Data -->
            <androidx.cardview.widget.CardView
                android:id="@+id/dtiNoData"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/triadPrimaryRed"
                    android:gravity="center"
                    android:padding="7dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="No Data"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- MAYORS PERMIT -->
    <LinearLayout
        android:id="@+id/mayorsPermit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shadow_background"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <!-- ICON -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/insurance_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp">

            <!-- Document Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mayor's Permit"
                android:textColor="@color/textColorBlack"
                android:textSize="19sp"
                android:fontFamily="@font/open_sans_bold"/>

            <!-- Has Added -->
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/mayorPermitHasAdded"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/triadPrimaryGreen"
                    android:padding="7dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        app:srcCompat="@drawable/check_mark_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:text="Added"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- No Data -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mayorPermitNoData"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/triadPrimaryRed"
                    android:gravity="center"
                    android:padding="7dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="No Data"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- BIR -->
    <LinearLayout
        android:id="@+id/bir"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shadow_background"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <!-- ICON -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/insurance_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp">

            <!-- Document Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIR"
                android:textColor="@color/textColorBlack"
                android:textSize="19sp"
                android:fontFamily="@font/open_sans_bold"/>

            <!-- Has Added -->
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/birHasAdded"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/triadPrimaryGreen"
                    android:padding="7dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        app:srcCompat="@drawable/check_mark_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:text="Added"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- No Data -->
            <androidx.cardview.widget.CardView
                android:id="@+id/birNoData"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/triadPrimaryRed"
                    android:gravity="center"
                    android:padding="7dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="No Data"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>