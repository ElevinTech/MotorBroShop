<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A363636"
    tools:context=".Dashboard.Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_shadow_background"
            android:paddingBottom="20dp"
            >

            <TextView
                android:id="@+id/yourShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Shop"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#2979FF"
                android:textSize="19sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/motorcycleImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/yamaha_logo_icon"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shop_colored_icon"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motors and Coffee"
                    android:fontFamily="@font/open_sans"
                    android:textColor="#030303"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendar_icon"
                    android:tint="#575757"
                    />
                <TextView
                    android:id="@+id/shopEstablished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:fontFamily="@font/open_sans"
                    android:text="Est: 1999"
                    android:textColor="#292929"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/users_icon"
                    android:tint="#575757"
                    />
                <TextView
                    android:id="@+id/shopCustomersNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customers: 23"
                    android:fontFamily="@font/open_sans"
                    android:textColor="#292929"
                    android:textSize="13sp"
                    android:layout_marginLeft="9dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wrench_icon"
                    android:tint="#575757"
                    />
                <TextView
                    android:id="@+id/shopPartsServicesNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parts and Services: 21"
                    android:fontFamily="@font/open_sans"
                    android:textColor="#292929"
                    android:textSize="13sp"
                    android:layout_marginLeft="9dp"
                    />
            </LinearLayout>








        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_shadow_background"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employees"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#2979FF"
                android:textSize="19sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_man_circular"

                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack Mantley"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="#313131"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_shadow_background"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Scanned"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="#2979FF"
            android:textSize="19sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sample_man_circular"

            android:layout_marginTop="10dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michael Strahan"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#313131"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dec 20, 1992"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#313131"
                android:textSize="11sp"
                android:textAlignment="textEnd"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_shadow_background"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parts and Services - Last Added"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="#2979FF"
                android:textSize="19sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tab_settings_icon"

                    android:layout_marginTop="10dp"
                    android:tint="#3D5AFE"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yamaha Mio Battery"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="#313131"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dec 20, 1992"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="#313131"
                    android:textSize="11sp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>