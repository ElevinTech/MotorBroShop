    android:layout_height="wrap_content">

    <!--android:fontFamily="@font/open_sans"-->
    <TextView
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
